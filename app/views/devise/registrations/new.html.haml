-# ヘッダー
= render 'shared/product_header'

-# 会員情報登録
.info-registration
  .info-registration--head
    %h2 会員情報登録
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    -# エラーログ
    .info-registration--form
      .error-log
        = devise_error_messages
      -# ニックネーム
      .field
        .nickname
          .nickname__dialogue
            = f.label :ニックネーム
            %span.required 必須
            %br/
            = f.text_field :nickname, placeholder: "ニックネーム"
      -# 名前
      .field
        .fullname
          .fullname--surname
            .fullname--surname__dialogue
              = f.label :名字
              %span.required 必須
              %br/
              = f.text_field :last_name, placeholder: "例：府李間"
          .fullname--name
            .fullname--name__dialogue
              = f.label :名前
              %span.required 必須
              %br/
              = f.text_field :first_name, placeholder: "例：負利尾"
      -# 名前(かな)
      .field
        .fullname-kana
          .fullname-kana--surname-kana
            .fullname-kana--surname-kana__dialogue
              = f.label :名字（かな）
              %span.required 必須
              %br/
              = f.text_field :last_name_kana, placeholder: "例：ふりま"
          .fullname-kana--name-kana
            .fullname-kana--name-kana__dialogue
              = f.label :名前（かな）
              %span.required 必須
              %br/
              = f.text_field :first_name_kana, placeholder: "例：ふりお"
      -# 生年月日
      .field
        .birthday
          .birthday__dialogue
            = f.label :生年月日
            %span.required 必須
            %br/
          .birthday__date
            = f.date_select :birthday, use_month_numbers: true, start_year: 1930, end_yaer: (Time.now.year - 10), default: Date.new(1989, 1, 1)
      -# 電話番号
      .field
        .tel
          .tel__dialogue
            = f.label :電話番号（ハイフンなし）
            %span.required 必須
            %br/
            = f.text_field :tel, placeholder: "01234567890"
      -# メールアドレス
      .field
        .mail
          .mail__dialogue
            = f.label :メールアドレス
            %span.required 必須
            %br/
            = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "例：aaa@test.com"
      -# パスワード
      .field
        .password
          .password__dialogue
            = f.label :パスワード
            %span.required 必須
            %br/
            = f.password_field :password, autocomplete: "new-password", placeholder: "7文字以上入力してください"
      .field
        .password-con
          .password-con__dialogue
            = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "もう一度パスワードを入力してください"
      -# ボタン
      .actions
        = f.submit "次へ進む"
-# フッター
= render 'shared/product_footer'